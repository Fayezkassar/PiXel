<Window x:Class="ImageResizingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ImageResizingApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        ResizeMode="NoResize"
        Title="Welcome to the Image Resizer"
        Height="500" Width="820"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <views:GetStartedView DataContext="{Binding CurrentViewModel}"></views:GetStartedView>
    </Grid>

</Window>
