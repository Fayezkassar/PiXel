<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainButtonStyle" BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}" TargetType="Button">
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
    </Style>
    <Style x:Key="MainCancelButtonStyle" BasedOn="{StaticResource MaterialDesignOutlinedButton}" TargetType="Button">
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
    </Style>
    <Style x:Key="LinkButtonStyle" BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
    </Style>
</ResourceDictionary>