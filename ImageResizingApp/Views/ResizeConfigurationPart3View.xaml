<UserControl x:Class="ImageResizingApp.Views.ResizeConfigurationPart3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageResizingApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Column="0" Grid.Row="0" Margin="50,163,50,33" Value="{Binding ProgressBarConfig.progressPercentage}"></ProgressBar>
        <TextBlock Grid.Column="0" Grid.Row="1" TextAlignment="Center" FontSize="16" Text='{Binding ProgressBarConfig.progressPercentage, StringFormat={}{0}%}'></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" TextAlignment="Center" FontSize="16">
              <Run Text="{Binding ProgressBarConfig.successNumber}"/>
              <Run Text="/"/>
              <Run Text="{Binding ProgressBarConfig.totalCount}"/>
              <Run Text="success"/>
        </TextBlock>
</Grid>
</UserControl>
